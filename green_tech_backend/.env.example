ACCESS_TOKEN_LIFETIME=60  # minutes
REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# CORS (for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Storage (local for development)
